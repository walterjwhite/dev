#!/bin/sh

import .

if [ $# -eq 2 ]; then
	_GH_PR_OPTIONS="-B $1 -H $2"
fi

_PR_URL=$(gh pr create $_GH_PR_OPTIONS --title="$_CONSOLE_CONTEXT_ID - $_CONSOLE_CONTEXT_DESCRIPTION" --body="$_CONSOLE_CONTEXT_ID - $_CONSOLE_CONTEXT_DESCRIPTION" 2>&1 | $_CONF_INSTALL_GNU_GREP -Po '^https://github.com.*$') ||
	_error "Error opening PR"

if [ -n "$_CONF_GITHUB_GH_NOTIFICATION" ]; then
	_on_gh_open_pr_$_CONF_GITHUB_GH_NOTIFICATION
else
	_warn "No notification configured: _CONF_GITHUB_GH_NOTIFICATION"
fi
