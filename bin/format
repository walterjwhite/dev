#!/bin/sh

. _LIBRARY_PATH/_APPLICATION_NAME/format.java.sh

# formats Java, XML, YAML
# can format specific files (one-at-a-time, limit to # of lines / time)
for _ARG in $@
do
    case $_ARG in
        # lines
        -l=*)
            _LINES="${_ARG#*=}"
            shift
            ;;
        -s=*)
            _SINCE="${_ARG#*=}"
            shift
            ;;
    esac
done

if [ -z "$_LINES" ] && [ -z "$_SINCE" ]
then
    _all
else
    _since
    _others
fi